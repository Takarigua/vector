---
driver:
  name: podman

platforms:
  - name: ubuntu
    image: ubuntu:20.04
    pre_build_image: false
    command: "sleep infinity"
    privileged: true
    dockerfile: molecule/podman/Dockerfile.ubuntu.j2

  - name: oracle
    image: oraclelinux:8
    pre_build_image: false
    command: "sleep infinity"
    privileged: true
    dockerfile: molecule/podman/Dockerfile.oracle.j2

provisioner:
  name: ansible
  env:
    ANSIBLE_ROLES_PATH: "/opt/vector-role:/opt/vector-role/roles"
  inventory:
    group_vars:
      all:
        ansible_python_interpreter: /usr/bin/python3

verifier:
  name: ansible
